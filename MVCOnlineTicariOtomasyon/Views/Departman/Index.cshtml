
@using MVCOnlineTicariOtomasyon.Models.Sınıflar;

@model List<Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach(var k in Model)
    {
    <tr>
        <td>@k.Departmanid</td>

        <td>@k.DepartmanAd</td>

        <td><a href="/Departman/DepartmanSil/@k.Departmanid" class="btn btn-danger">SİL</a></td>

        <td><a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-warning">GÜNCELLE</a></td>

        <td><a href="/Departman/DepartmanDetay/@k.Departmanid" class="btn btn-default"
               style="background-color:lightcoral; color:whitesmoke">Detaylar</a></td>

    </tr>
    }
</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>