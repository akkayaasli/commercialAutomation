
@using MVCOnlineTicariOtomasyon.Models.Sınıflar;

@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
    
        <th>Seri Sıra No</th>
     
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>           

            <td>@k.FaturaSeriNo @k.FaturaSıraNo</td> 

            <td>@k.VergiDaire</td>

            <td>@k.Tarih</td>

            <td>@k.Saat</td>

            <td>@k.Toplam</td>

            <td>@k.TeslimEden</td>

            <td>@k.TeslimAlan</td>

       

            <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">GÜNCELLE</a></td>

            <td>
                <a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default"
                   style="background-color:lightcoral; color:whitesmoke">Detaylar</a>
            </td>

        </tr>
    }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
